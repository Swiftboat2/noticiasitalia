rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read and write access to news items
    match /news/{document=**} {
      allow read, write: if true;
    }

    // Allow public read and write access to ticker messages
    match /tickerMessages/{document=**} {
      allow read, write: if true;
    }
  }
}
