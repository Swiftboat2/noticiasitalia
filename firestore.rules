rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read news articles that are active
    match /news_articles/{articleId} {
      allow read: if resource.data.isActive == true;
      // Allow only admins to write (create, update, delete)
      allow write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.admin == true;
    }
    
    // Allow admins to read the full list for the dashboard
    match /news_articles/{articleId} {
       allow list: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.admin == true;
    }

    // Rules for admin roles
    match /roles_admin/{userId} {
      // Only the user themselves or another admin can see if a user is an admin
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.admin == true;
      // Writes should be highly restricted, e.g., only by an existing admin or a backend process
      allow write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.admin == true;
    }
  }
}
