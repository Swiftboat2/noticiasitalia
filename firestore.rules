rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Estas reglas permiten a cualquiera leer y escribir en toda la base de datos.
    // Son ideales para el desarrollo pero deben restringirse para producci√≥n.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
