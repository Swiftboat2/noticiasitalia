rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read news articles that are active
    match /news_articles/{articleId} {
      allow read: if resource.data.isActive == true;
      // Allow any authenticated user to write (create, update, delete)
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read the full list for the dashboard
    match /news_articles/{articleId} {
       allow list: if request.auth != null;
    }

    // The roles_admin collection is no longer used for authorization in the app,
    // but these rules prevent unauthorized access.
    match /roles_admin/{userId} {
      allow read, write: if false;
    }
  }
}
