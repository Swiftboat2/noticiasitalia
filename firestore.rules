rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access for news and ticker messages
    // for this prototype.
    match /news/{document=**} {
      allow read, write: if true;
    }

    match /tickerMessages/{document=**} {
      allow read, write: if true;
    }
  }
}
