rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Security rules for news_articles collection
    match /news_articles/{newsArticleId} {
      // Anyone can read news articles
      allow read: if true;
      
      // Only authenticated admins can create, update, or delete
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Security rules for admin roles collection
    match /roles_admin/{userId} {
      // No one can list the admin roles for security reasons
      allow list: if false;
      
      // An admin can be read, but only if the user knows the specific user ID
      allow get: if true;
      
      // For simplicity in this stage, writes to admin roles are disabled.
      // In a real application, you'd have a super-admin or a cloud function to manage this.
      allow write: if false;
    }
  }
}
