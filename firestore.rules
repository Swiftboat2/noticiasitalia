
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for news and ticker messages,
    // as they are intended for public display on the viewer.
    // Write operations should be restricted.
    match /news/{newsId} {
      allow read: if true;
      // Allow write access only for authenticated "admins".
      // For this app, we'll assume any logged-in user is an admin for now.
      allow write: if request.auth != null;
    }

    match /tickerMessages/{messageId} {
      allow read: if true;
      // Allow write access only for authenticated "admins".
      allow write: if request.auth != null;
    }
  }
}
